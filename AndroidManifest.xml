<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zappos"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="Zappos Discount Checker"
        android:theme="@style/AppTheme" >
        <activity
            android:name="zappos.DiscountChecker.Category"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category" />
            </intent-filter>
        </activity>
        <activity
            android:name="zappos.DiscountChecker.Product_List"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.PRODUCT" />

                <category android:name="android.intent.category" />
            </intent-filter>
        </activity>
        <activity
            android:name="zappos.DiscountChecker.SingleProduct"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.PRODUCT" />

                <category android:name="android.intent.category" />
            </intent-filter>
        </activity>
        <activity
            android:name="zappos.DiscountChecker.DiscountChecker"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
                <activity
            android:name="zappos.DiscountChecker.DiscountProduct"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>